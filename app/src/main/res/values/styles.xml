<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChenJin" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item><!--状态栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item><!--标题栏颜色-->
        <item name="android:textCursorDrawable">@null</item>   <!--光标颜色和字体一样-->
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>   <!--解决输入法顶走标题栏-->
    </style>
    <style name="touming" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item><!--状态栏透明-->
        <item name="android:fitsSystemWindows">true</item><!--是否留状态栏位置-->
        <item name="android:textCursorDrawable">@color/colorAccent</item>
    </style>

</resources>
